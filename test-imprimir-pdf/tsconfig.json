{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./assets/*"],
      "@utils/*": ["./assets/utils/*"],
      "@composables/*": ["./assets/composables/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "assets/**/*.js",
    "assets/**/*.vue",
    "assets/**/*.d.ts",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
