{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "api/**/*",
    "test-imprimir-pdf/**/*",
    "test-imprimir-pdf/assets/vue-global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "test-imprimir-pdf/dist/**"
  ]
}

